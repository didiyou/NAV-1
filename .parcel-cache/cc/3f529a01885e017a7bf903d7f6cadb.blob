/* css reset */
*{box-sizing:border-box;}
*:before,*after{box-sizing:border-box;}
*{margin:0;padding:0;}
ul,ol{list-style:none;}
a{color:inherit}
/* style */
body{
background:#eee;
}
.searchForm{
    
    margin:20px;
    display:flex;
    justify-content:space-between;
}
.searchForm > input{ 
    width:100%;
    margin-right:10px;
    height:40px;
    
    padding:0 10px;
    border-radius:4px;
}
.searchForm > button{ 
    white-space:nowrap;
    padding:0 28px;
    border:none;
    border-radius:4px;
    background: #100E76;
    color:white;
    font-size: 16px;
}
.globalMain{

}
.siteList{
    display:flex;
    flex-wrap:wrap;
    margin:0 20px;
    justify-content: space-between;
}
/* .siteList > li{
    border:1px solid black;
    
} */
.siteList .site{
   
    width:160px;
    display:flex;
    justify-content: center;
    align-items:center;
    flex-direction:column;
    background:white;
    margin-bottom: 10px;
    border-radius: 4px;
    padding:20px 0;
}

.siteList .site > .log{
    
    width:64px;
    height:64px;
    display:flex;
    justify-content: center;
    align-items:center;
    font-size: 64px;
}
.siteList .site > .link{
    font-size: 18px;
    margin-top:4px;
}
.siteList .addButton { 
    width:160px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding:20px 0;
    background-color: white;
}
.siteList .addButton .icon{ 
    
    width:64px;
    height:64px;

}
.siteList .addButton .icon-Wrapper{ 
    width:64px;
    height:64px;
    display:flex;
    justify-content: center;
    align-items: center;
}
.siteList .addButton > .text{
    font-size: 18px;
    margin-top:4px;
}